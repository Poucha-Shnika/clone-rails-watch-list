<h1> <%= @list.name %> </h1>

<ul>
  <% @bookmarks.each do |bookmark| %>
    <li><%=bookmark.movie.title%><%=bookmark.comment%><%= link_to "Delete", bookmark_path(bookmark), method: :delete, data: { confirm: "Are you sure?" }, :class => "btn btn-danger" %></li>
  <% end %>
</ul>

<%= link_to "Add a stupid bookmark", new_list_bookmark_path(@list), :class => "btn btn-warning"  %>

<hr>

<%= link_to "Back to all the stupid lists", lists_path, :class => "btn btn-primary" %>

